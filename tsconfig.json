{
    "compilerOptions": {
        /* Basic Options */
        "incremental": true,
        "target": "ESNext",
        "module": "ESNext",
        "outDir": ".cache/js",
        "sourceMap": true,

        /* Strict Type-Checking Options */
        "strict": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["node"]
    }
}
